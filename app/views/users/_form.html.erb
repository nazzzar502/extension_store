<div class="column is-one-quarter">
  <%= form_with(model: user, local: true) do |form| %>
    <div class="field">
      <label class="label"><%= form.label :name, class: 'label', placeholder: 'User Name' %></label>
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :name, class: 'input', placeholder: 'User Name'%>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <%if user.errors.any? %>
        <div>
          <% user.errors.full_messages_for(:name).each do |message| %>
            <p class="tag is-danger" ><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <label class="label"><%= form.label :password, class: 'label', placeholder: 'User Password' %></label>
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :password, class: 'input', placeholder: 'User Password'%>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <%if user.errors.any? %>
        <div>
          <% user.errors.full_messages_for(:password).each do |message| %>
            <p class="tag is-danger" ><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <label class="label"><%= form.label :password_confirmation, class: 'label', placeholder: 'Password Confirmation' %></label>
      <div class="control has-icons-left has-icons-right">
        <%= form.text_field :password_confirmation, class: 'input', placeholder: 'Password Confirmation'%>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
      <%if user.errors.any? %>
        <div>
          <% user.errors.full_messages_for(:password_confirmation).each do |message| %>
            <p class="tag is-danger" ><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
    </div>
  <% end %>
</div>