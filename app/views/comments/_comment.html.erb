<hr>
<% if comment %>
  <% if comment.id == params[:id]%>
    <p id="notice"><%= notice %></p>
  <% end %>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-6"><%= User.find_by(id: comment.user_id).name %></p>
          <p class="subtitle is-6"><%= comment.label %></p>
        </div>
        <% if comment.user_id == session[:user_id] %>
          <div class="media-right">
            <%=link_to '', comment, method: :delete, remote: true, class: "delete"%>
          </div>
        <% end %>
      </div>

      <div class="content">
        <div>
          <%= comment.body %>
        </div>
        <br>
        <time datetime="2016-1-1"><%= comment.created_at.strftime("%Y/%m/%d") %></time>
      </div>
    </div>
  </div>
 
<% end %>
