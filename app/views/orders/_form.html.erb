<div class="column is-half">
  <%= form_with(model: order, local: true) do |form| %>
    <section class="columns">
      <div class="column">
        <div class="field">
          <%= form.label :name, class: 'label', placeholder: 'Text input' %>
          
          <div class="control">
            <%= form.text_field :name, class: 'input', placeholder: 'Text input'%>
          </div>
        </div>

        <%if order.errors.any? %>
          <div>
            <% order.errors.full_messages_for(:name).each do |message| %>
              <li class="tag is-danger" ><%= message %></li>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="column">    
        <div class="field">
          <%= form.label :email, class: 'label', placeholder: 'Text input' %>
          
          <div class="control">
            <%= form.email_field :email, class: 'input', placeholder: 'Text input'%>
          </div>
        </div>

        <%if order.errors.any? %>
          <div>
            <% order.errors.full_messages_for(:email).each do |message| %>
              <li class="tag is-danger" ><%= message %></li>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>

    <section class="columns">
      <div class="column">
        <div class="field">
          <%= form.label :address, class: 'label', placeholder: 'Text input' %>
          
          <div class="control">
            <%= form.text_field :address, class: 'input', placeholder: 'Text input'%>
          </div>
        </div>

        <%if order.errors.any? %>
          <div>
            <% order.errors.full_messages_for(:address).each do |message| %>
              <li class="tag is-danger" ><%= message %></li>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>

    <section class="columns">
      <div class="column">
        <div class="field">
          <%= form.label :pay_type, class: 'label', placeholder: 'Text input' %>
          
          <div class="select">
            <div id='pay-type-component'></div>
            <!--%= form.select :pay_type, Order.pay_types.keys, prompt: 'Select a payment method' %-->
          </div>
        </div>

        <%if order.errors.any? %>
          <div>
            <% order.errors.full_messages_for(:pay_type).each do |message| %>
              <li class="tag is-danger" ><%= message %></li>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
